{
  "compilerOptions": {
    "rootDirs": [
      "src/",
      "tests/"
    ],
    "outDir": "./dist",
    "watch": true,
    "target": "es5",
    "module": "CommonJS",
    "types": [
      "node",
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "files": [
    "src/main.ts"
  ]
}